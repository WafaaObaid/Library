                                                <Label prefHeight="18.0" prefWidth="64.0" text="contact :" textFill="WHITE" GridPane.rowIndex="1">
                                       <GridPane.margin>
                                          <Insets bottom="170.0" />
                                       </GridPane.margin></Label>
                                                <TextField fx:id="txtContact" prefHeight="16.0" prefWidth="142.0" promptText="phone or email" GridPane.columnIndex="1" GridPane.rowIndex="1">
