                                        <Button fx:id="btnClear" onAction="#clearForm" style="-fx-text-fill: #8c7c57;" text="Clear" />
                              <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#removemember" style="-fx-text-fill: #8c7c57;" text="remove" />
