                <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
                    <items>

                       
                        <AnchorPane>
                            <children>
                                <VBox alignment="CENTER_LEFT" prefHeight="432.0" prefWidth="242.0" spacing="12.0" style="-fx-background-color: #634118;">
                                    <children>
                                        <Label alignment="CENTER" prefHeight="169.0" prefWidth="223.0" styleClass="section-title" text="new member ? fill this form" textAlignment="CENTER" textFill="WHITE">
